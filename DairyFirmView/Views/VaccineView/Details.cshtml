@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

@model DairyFirmView.ViewModel.VaccineInfoVM

<!-- Page Title -->
<div class="content-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0"><i class="me-2"></i>Vaccine Details</h2>
            <a asp-action="List" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Details Card -->
<div class="card shadow-lg border-0 col-lg-8 col-md-10 col-sm-12 m-auto p-0">
    <div class="card-header bg-primary text-white">
        <h4 class="card-title mb-0"><i class="me-2"></i>Vaccine Information</h4>
    </div>

    <div class="card-body p-4">

        <div class="row mb-3">
            <div class="col-md-6">
                <h6 class="fw-bold text-secondary">Vaccine Name</h6>
                <p class="fs-5">@Model.VaccineName</p>
            </div>
            <div class="col-md-6">
                <h6 class="fw-bold text-secondary">Vaccine Price</h6>
                <p class="fs-5">@Model.VaccinePrice.ToString("C")</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <h6 class="fw-bold text-secondary">Total Vaccine</h6>
                <p class="fs-5">@Model.TotalVaccine</p>
            </div>
            <div class="col-md-6">
                <h6 class="fw-bold text-secondary">Apply On</h6>
                <p class="fs-5">Month: @Model.VaccineMonth, Day: @Model.VaccineDay</p>
            </div>
        </div>

    </div>

    <div class="card-footer text-center bg-light">
        <a asp-action="VaccineEdit" asp-route-id="@Model.VaccineId" class="btn btn-success px-4 me-2">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="VaccineDelete" asp-route-id="@Model.VaccineId"
           class="btn btn-danger px-4"
           onclick="return confirm('Are you sure you want to delete this vaccine?');">
            <i class="fas fa-trash-alt"></i> Delete
        </a>
    </div>
</div>
