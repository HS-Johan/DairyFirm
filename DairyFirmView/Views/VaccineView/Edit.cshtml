@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

@model DairyFirmView.ViewModel.VaccineInfoVM

<!-- Page Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0"><i class="me-2"></i>Edit Vaccine</h2>
            <a asp-action="List" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Edit Vaccine Card -->
<div class="card shadow-lg border-0 col-lg-8 col-md-10 col-sm-12 m-auto p-0">
    <div class="card-header bg-primary text-white">
        <h4 class="card-title mb-0"><i class="me-2"></i>Update Vaccine Information</h4>
    </div>

    <form asp-controller="VaccineView" asp-action="Edit" method="post" class="needs-validation" novalidate>
        <div class="card-body p-4">
            <input type="hidden" asp-for="VaccineId" />

            <div class="mb-3">
                <label asp-for="VaccineName" class="form-label fw-bold">Vaccine Name</label>
                <input asp-for="VaccineName" class="form-control" placeholder="Enter vaccine name" />
            </div>

            <div class="mb-3">
                <label asp-for="VaccinePrice" class="form-label fw-bold">Vaccine Price</label>
                <input asp-for="VaccinePrice" class="form-control" placeholder="Enter vaccine price" />
            </div>

            <div class="mb-3">
                <label asp-for="TotalVaccine" class="form-label fw-bold">Total Vaccine</label>
                <input asp-for="TotalVaccine" class="form-control" placeholder="Enter total number of vaccines" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="VaccineMonth" class="form-label fw-bold">Vaccine Month</label>
                    <input asp-for="VaccineMonth" class="form-control" placeholder="Enter vaccine month" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="VaccineDay" class="form-label fw-bold">Vaccine Day</label>
                    <input asp-for="VaccineDay" class="form-control" placeholder="Enter vaccine day" />
                </div>
            </div>
        </div>

        <!-- Centered Buttons -->
        <div class="card-footer bg-light text-center">
            <button type="submit" class="btn btn-success px-4 me-2">
                <i class="fas fa-save me-1"></i> Update
            </button>
            <a asp-action="VaccineList" class="btn btn-outline-secondary px-4">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
